<?xml version="1.6" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.armagefinder.morriss.armagefinder" >

    <application
        android:allowBackup="true"
        android:label="Arm Age Finder"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Arm Age Finder"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PitcherActivity"
            android:label="Pitcher"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/PitcherBackground">
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:label="Results"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PositionPlayerActivity"
            android:label="Position Player"
            android:theme="@style/PositionPlayerBackground"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".DualPlayerActivity"
            android:label="Dual Player"
            android:theme="@style/DualPlayerBackground"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
